{
  "name": "@cinelink/app",
  "description": "cinelink",
  "version": "1.0.0",
  "private": true,
  "engines": { "node": ">=22" },
  "dependencies": {
    "@rootsdk/client-app": "*",
    "@rootsdk/server-app": "*",
    "@cinelink/gen-client": "file:./networking/gen/client",
    "@cinelink/gen-server": "file:./networking/gen/server",
    "@cinelink/gen-shared": "file:./networking/gen/shared"
  },
  "devDependencies": {
    "@rootsdk/dev-tools": "*",
    "@playwright/test": "^1.50.1",
    "typescript": "^5.8.2",
    "@types/node": "^22.10.2"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "node clean.js",
    "test:fixtures": "node tests/scripts/generate-fixtures.mjs",
    "test:player:api": "node tests/api/player-tests.mjs",
    "test:player:e2e": "playwright test --reporter=line",
    "test:player": "node tests/scripts/run-player-tests.mjs"
  },
  "workspaces": {
    "packages": [
      "./networking",
      "./server",
      "./client"
    ]
  }
}
